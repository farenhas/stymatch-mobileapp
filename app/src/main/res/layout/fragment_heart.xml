<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F8E8E8">

    <!-- Header Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp"
        android:background="#F0D0D0">

        <TextView
            android:id="@+id/titleHeart"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Face Shape: Heart"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="#333333"
            android:gravity="center"
            android:paddingBottom="8dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Personalized recommendations for your heart face shape"
            android:textSize="14sp"
            android:textColor="#666666"
            android:gravity="center"/>

    </LinearLayout>

    <!-- Content Section -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Hairstyles Card -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/card_background"
                android:padding="20dp"
                android:layout_marginBottom="16dp"
                android:elevation="4dp">

                <TextView
                    android:id="@+id/hairTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Recommended Hairstyles"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="#333333"
                    android:paddingBottom="12dp"/>

                <TextView
                    android:id="@+id/hairDesc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="• Chin-length bobs to add width at the jaw\n• Side-swept bangs to soften your forehead\n• Waves or curls at chin level for volume\n• Long layers that frame your face\n• Avoid heavy, straight-across bangs"
                    android:textSize="16sp"
                    android:textColor="#555555"
                    android:lineSpacingExtra="6dp"/>

            </LinearLayout>

            <!-- Glasses Card -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/card_background"
                android:padding="20dp"
                android:layout_marginBottom="16dp"
                android:elevation="4dp">

                <TextView
                    android:id="@+id/glassesTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Recommended Glasses"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="#333333"
                    android:paddingBottom="12dp"/>

                <TextView
                    android:id="@+id/glassesDesc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="• Bottom-heavy frames to balance your forehead\n• Round or oval frames for a softer look\n• Frames wider at the bottom than the top\n• Light-colored or rimless frames\n• Avoid wide, top-heavy frames"
                    android:textSize="16sp"
                    android:textColor="#555555"
                    android:lineSpacingExtra="6dp"/>

            </LinearLayout>

            <!-- Makeup Tips Card -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/card_background"
                android:padding="20dp"
                android:layout_marginBottom="16dp"
                android:elevation="4dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Makeup Tips"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="#333333"
                    android:paddingBottom="12dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="• Contour your temples to minimize forehead width\n• Add blush to the lower part of your cheeks\n• Define your jawline with subtle contouring\n• Use bronzer along your hairline\n• Bold lip colors to draw attention downward"
                    android:textSize="16sp"
                    android:textColor="#555555"
                    android:lineSpacingExtra="6dp"/>

            </LinearLayout>

            <!-- Styling Tips Card -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/card_background"
                android:padding="20dp"
                android:layout_marginBottom="16dp"
                android:elevation="4dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Styling Tips"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="#333333"
                    android:paddingBottom="12dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="• Choose earrings that are wider at the bottom\n• Statement necklaces to draw attention down\n• Avoid small studs or top-heavy earrings\n• Scarves and collars add width to your jawline\n• Embrace your naturally striking cheekbones"
                    android:textSize="16sp"
                    android:textColor="#555555"
                    android:lineSpacingExtra="6dp"/>

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>