<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F8E8E8">

    <!-- Header Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp"
        android:background="#F0D0D0">

        <TextView
            android:id="@+id/titleEgg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Face Shape: Egg"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="#333333"
            android:gravity="center"
            android:paddingBottom="8dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Personalized recommendations for your egg face shape"
            android:textSize="14sp"
            android:textColor="#666666"
            android:gravity="center"/>

    </LinearLayout>

    <!-- Content Section -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Hairstyles Card -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/card_background"
                android:padding="20dp"
                android:layout_marginBottom="16dp"
                android:elevation="4dp">

                <TextView
                    android:id="@+id/hairTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Recommended Hairstyles"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="#333333"
                    android:paddingBottom="12dp"/>

                <TextView
                    android:id="@+id/hairDesc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="• Short to medium length hairstyles work best\n• Blunt bobs to add width at the jawline\n• Full bangs to balance your forehead\n• Layered cuts for volume at the sides\n• Avoid center parts and long straight hair"
                    android:textSize="16sp"
                    android:textColor="#555555"
                    android:lineSpacingExtra="6dp"/>

            </LinearLayout>

            <!-- Glasses Card -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/card_background"
                android:padding="20dp"
                android:layout_marginBottom="16dp"
                android:elevation="4dp">

                <TextView
                    android:id="@+id/glassesTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Recommended Glasses"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="#333333"
                    android:paddingBottom="12dp"/>

                <TextView
                    android:id="@+id/glassesDesc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="• Wide frames to balance your narrow chin\n• Square or rectangular frames for structure\n• Bold, thick frames to add visual weight\n• Cat-eye glasses for a vintage look\n• Avoid narrow or delicate frames"
                    android:textSize="16sp"
                    android:textColor="#555555"
                    android:lineSpacingExtra="6dp"/>

            </LinearLayout>

            <!-- Makeup Tips Card -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/card_background"
                android:padding="20dp"
                android:layout_marginBottom="16dp"
                android:elevation="4dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Makeup Tips"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="#333333"
                    android:paddingBottom="12dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="• Contour the temples to reduce forehead width\n• Add blush to the apples of your cheeks\n• Define your jawline with subtle contouring\n• Use highlight on your chin to add definition\n• Bold lip colors to balance your features"
                    android:textSize="16sp"
                    android:textColor="#555555"
                    android:lineSpacingExtra="6dp"/>

            </LinearLayout>

            <!-- Styling Tips Card -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/card_background"
                android:padding="20dp"
                android:layout_marginBottom="16dp"
                android:elevation="4dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Styling Tips"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="#333333"
                    android:paddingBottom="12dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="• Choose earrings that add width at the jawline\n• Statement earrings work particularly well\n• Avoid long, dangly earrings that elongate\n• Scarves and chokers can add visual interest\n• Embrace your naturally balanced features"
                    android:textSize="16sp"
                    android:textColor="#555555"
                    android:lineSpacingExtra="6dp"/>

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>