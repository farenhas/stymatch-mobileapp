<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F8E8E8">

    <!-- Header Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp"
        android:background="#F0D0D0">

        <TextView
            android:id="@+id/titleSquare"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Face Shape: Square"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="#333333"
            android:gravity="center"
            android:paddingBottom="8dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Personalized recommendations for your square face shape"
            android:textSize="14sp"
            android:textColor="#666666"
            android:gravity="center"/>

    </LinearLayout>

    <!-- Content Section -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Hairstyles Card -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/card_background"
                android:padding="20dp"
                android:layout_marginBottom="16dp"
                android:elevation="4dp">

                <TextView
                    android:id="@+id/hairTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Recommended Hairstyles"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="#333333"
                    android:paddingBottom="12dp"/>

                <TextView
                    android:id="@+id/hairDesc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="• Layered cuts to add texture and movement\n• Side-swept bangs to soften angular features\n• Waves or curls to create gentle, flowing lines\n• Asymmetrical styles to break up sharp angles"
                    android:textSize="16sp"
                    android:textColor="#555555"
                    android:lineSpacingExtra="6dp"/>

            </LinearLayout>

            <!-- Glasses Card -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/card_background"
                android:padding="20dp"
                android:layout_marginBottom="16dp"
                android:elevation="4dp">

                <TextView
                    android:id="@+id/glassesTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Recommended Glasses"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="#333333"
                    android:paddingBottom="12dp"/>

                <TextView
                    android:id="@+id/glassesDesc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="• Round or oval frames to soften sharp angles\n• Cat-eye glasses for a feminine, elegant look\n• Curved frame styles to complement face shape\n• Avoid square or rectangular frames"
                    android:textSize="16sp"
                    android:textColor="#555555"
                    android:lineSpacingExtra="6dp"/>

            </LinearLayout>

            <!-- Additional Tips Card -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/card_background"
                android:padding="20dp"
                android:layout_marginBottom="16dp"
                android:elevation="4dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Styling Tips"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="#333333"
                    android:paddingBottom="12dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="• Focus on adding curves and softness\n• Highlight your best features like eyes or lips\n• Choose accessories that complement your strong jawline\n• Embrace your natural bone structure"
                    android:textSize="16sp"
                    android:textColor="#555555"
                    android:lineSpacingExtra="6dp"/>

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>